<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
    <h5>Username: </h5>
    <%= current_user.first_name  %> <%= current_user.last_name %> <br>
    <h5>Email: </h5>
    <%= current_user.email%>
    <% if current_user.github_user? %>
    <section>
      <h3>GitHub Repos</h3>
      <%= link_to "Checkout More Repos", dashboard_path %> <br><br>
        <% current_user.user_repos(5).each do |repo| %>
          <section class="repos">
          <p1> <%= link_to  repo.name, repo.html_url %>  </p1>
          </section>
        <% end %>
      <h3>Followers</h3>
       <% current_user.followers.each do |follower| %>
        <section class="followers">
        <p1> <%= link_to follower.login, follower.html_url %> </p1>
        </section>
       <% end %>
       <h3>Following</h3>
         <% current_user.following.each do |following| %>
         <section class='following'>
         <p1> <%= link_to following.login, following.html_url %> </p1>
         </section>
         <% end %>
      <h1>Bookmarked Segments</h1>
    </section>
  <% else %>
    <%= button_to 'Connect to GitHub', 'auth/github', class: "btn btn-primary mb1 bg-teal"  %>
  <% end %>
</section>
